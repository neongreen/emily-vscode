{
  "name": "emily",
  "displayName": "Emily",
  "description": "VS Code extension with emoji cycling and more features",
  "version": "1.0.0",
  "publisher": "emily",
  "repository": {
    "type": "git",
    "url": "https://github.com/neongreen/emily-vscode.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "emily.cycleEmoji",
        "title": "Emily: Cycle Emoji in Header"
      }
    ],
    "configuration": {
      "title": "Emily",
      "properties": {
        "emily.emojis": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "âœ…",
            "ðŸš«",
            "ðŸŸ¢",
            "ðŸŸ¡",
            "ðŸ”´"
          ],
          "description": "List of emojis to cycle through in markdown headers"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check .",
    "test": "tsx test/cursor-position.test.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/node": "^24.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.6.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.13.1"
}
