{
  "name": "emily",
  "displayName": "Emily",
  "description": "VS Code extension with emoji cycling and more features",
  "version": "1.0.0-20250811-183403",
  "publisher": "emily",
  "repository": {
    "type": "git",
    "url": "https://github.com/neongreen/emily-vscode.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "files": [
    "out/",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "contributes": {
    "commands": [
      {
        "command": "emily.cycleEmoji",
        "title": "Emily: Cycle Emoji in Header",
        "enablement": "editorLangId == markdown"
      },
      {
        "command": "emily.dumpDefinitions",
        "title": "Emily: Dump All Definitions (Developer)",
        "enablement": "true"
      }
    ],
    "keybindings": [
      {
        "command": "emily.cycleEmoji",
        "key": "ctrl+k ctrl+e",
        "mac": "cmd+k cmd+e",
        "when": "editorLangId == markdown && editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Emily",
      "properties": {
        "emily.emojis": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "âœ…",
            "â›”",
            "ðŸŸ¢",
            "ðŸŸ¡",
            "ðŸ”´"
          ],
          "description": "List of emojis to cycle through in markdown headers"
        },
        "emily.languageFileExtensions": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "default": {
            "haskell": [
              "*.hs"
            ],
            "mu": [
              "*.hs",
              "*.mu"
            ]
          },
          "description": "Mapping of language IDs to file extensions for definition searching"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "esbuild-base": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --platform=node --target=node20",
    "esbuild-prod": "pnpm run esbuild-base -- --minify",
    "watch": "tsc -watch -p ./ --noEmit",
    "lint": "biome lint .",
    "test": "tsx test/cursor-position.test.ts"
  },
  "dependencies": {
    "execa": "^9.6.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/node": "^24.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.8",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.13.1"
}
